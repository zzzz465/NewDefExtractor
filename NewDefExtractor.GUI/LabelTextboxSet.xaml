<UserControl x:Class="NewDefExtractor.GUI.LabelTextboxSet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NewDefExtractor.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" x:Name="LeftLabelSize" HorizontalAlignment="Stretch"/>
        <TextBox Grid.Column="1" x:Name="RightTextBox" Text="{Binding Path=TextBoxContent}"/>
    </Grid>
</UserControl>
